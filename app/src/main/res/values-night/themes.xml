<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <style name="TextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="buttonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/btnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="RecViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gridBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="FloatingButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/fbtnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="MainBackground">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/mainBackgroundColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="Theme.Project" parent="Base.Theme.Project" />
</resources>